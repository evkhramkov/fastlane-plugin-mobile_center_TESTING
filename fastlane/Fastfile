# load variables from .env file
open('../.env', 'r').readlines.each do |l|
  kv = l.split('=')
  ENV[kv[0]] = kv[1]
end

lane :test do
  # mobile_center(api_token: ENV["MOBILE_CENTER_API_TOKEN"])
  release(
    api_token: ENV["MOBILE_CENTER_API_TOKEN"],
    ipa: './app-release.apk',
    app: 'v-evkhra/MyApplication',
    group: 'Testers'
  )
  # build(
